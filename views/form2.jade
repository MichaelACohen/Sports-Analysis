extends layout

link(rel="stylesheet", href="http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css")
block append scripts
	script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/js/bootstrapValidator.min.js")
	script(src="/javascripts/bootstrap-multiselect.js")
	script(src='/javascripts/multiselect.js')
	script.
		setUp(!{isPlayers}, !{JSON.stringify(names)}, !{JSON.stringify(posEvents)}, !{JSON.stringify(negEvents)})

block content
	h1(align="center") Multiselect Testing
	form(id="multiselectForm" class="form-horizontal" method="post" action="/scraping/analyze")
		div(class="row-fluid" style='margin-top:50px')
			div(class="col-md-offset-3 col-md-2")
				label Players
			div(class="col-md-2")
				label Positive Events
			div(class="col-md-2")
				label Negative Events
		div(class="form-group row-fluid")
			div(class="col-md-offset-3 col-md-2")
				select(id="names" name="names" class="form-control" multiple="multiple")
			div(class="col-md-2")
				select(id="posEvents" name="posEvents" class="form-control" multiple="multiple")
			div(class="col-md-2")
				select(id="negEvents" name="negEvents" class="form-control" multiple="multiple")
			div(class="col-md-2")
				input(type="hidden" name="isPlayers" value="#{isPlayers}")
				input(type="submit" class="btn btn-default" value="Analyze")
		div(id="alert" class="alert alert-danger hidden col-sm-offset-2 col-sm-10" role="alert")
			span(id="errorMsg" class="glyphicon glyphicon-exclamation-sign" aria-hidden="true")
extends layout

block append scripts
	script(src="/javascripts/bootstrap-multiselect.js")
	script(src='/javascripts/multiselect.js')
	script.
		setUp(!{isPlayers}, !{JSON.stringify(names)}, !{JSON.stringify(posEvents)}, !{JSON.stringify(negEvents)})

block content
	h1(align="center") Multiselect Testing
	form(id="multiselectForm" class="form-horizontal" method="post" action="/basketball/analyze")
		div(class="form-group")
			label(class="col-sm-2 control-label") Players
			div(class="col-sm-10")
				select(id="names" name="names" class="form-control" multiple="multiple")
		div(class="form-group")
			label(class="col-sm-2 control-label") Positive Events
			div(class="col-sm-10")
				select(id="posEvents" name="posEvents" class="form-control" multiple="multiple")
		div(class="form-group")
			label(class="col-sm-2 control-label") Negative Events
			div(class="col-sm-10")
				select(id="negEvents" name="negEvents" class="form-control" multiple="multiple")
		div(class="form-group")
			input(type="hidden" name="isPlayers" value="#{isPlayers}")
			div(class="col-sm-offset-2 col-sm-10")
				input(type="submit" class="btn btn-default")
		div(id="alert" class="alert alert-danger hidden col-md-offset-2 col-md-8" role="alert")
			span(id="errorMsg" class="glyphicon glyphicon-exclamation-sign" aria-hidden="true")